#!/bin/bash
# Pre-commit hook: Run linting and type checking on staged files

set -e

# Get list of staged Python files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

echo "Running pre-commit checks on staged files..."

echo "→ Running ruff format check..."
if ! uv run ruff format --check $STAGED_FILES; then
    echo "ERROR: Code formatting issues found. Run 'uv run ruff format' to fix."
    exit 1
fi

echo "→ Running ruff lint..."
if ! uv run ruff check $STAGED_FILES; then
    echo "ERROR: Linting issues found. Run 'uv run ruff check --fix' to auto-fix."
    exit 1
fi

echo "→ Running mypy..."
if ! uv run mypy $STAGED_FILES; then
    echo "ERROR: Type checking failed. Fix type errors before committing."
    exit 1
fi

echo "✓ All pre-commit checks passed!"
exit 0
