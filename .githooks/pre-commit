#!/bin/bash
# Pre-commit hook: Run linting and type checking

# Get list of staged Python files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$')

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

echo "Running ruff format check..."
if ! ruff format --check $STAGED_FILES 2>/dev/null; then
    echo "ERROR: Code formatting issues found. Run 'ruff format' to fix."
    exit 1
fi

echo "Running ruff lint..."
if ! ruff check $STAGED_FILES 2>/dev/null; then
    echo "ERROR: Linting issues found. Run 'ruff check --fix' to auto-fix."
    exit 1
fi

echo "Running mypy..."
if ! mypy $STAGED_FILES 2>/dev/null; then
    echo "ERROR: Type checking failed. Fix type errors before committing."
    exit 1
fi

echo "All checks passed!"
exit 0
