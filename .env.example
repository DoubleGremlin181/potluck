# PostgreSQL (used by Docker Compose)
POSTGRES_USER=potluck
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=potluck
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database URLs
# For Docker: use host "db" (container name)
# For local development: use host "localhost"
DATABASE_URL=postgresql+asyncpg://potluck:changeme_in_production@db:5432/potluck
SYNC_DATABASE_URL=postgresql://potluck:changeme_in_production@db:5432/potluck

# Redis (for Celery)
REDIS_URL=redis://redis:6379/0

# Web server
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Logging
LOG_LEVEL=INFO